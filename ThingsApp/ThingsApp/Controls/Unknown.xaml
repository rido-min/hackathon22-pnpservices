<UserControl x:Class="ThingsApp.Controls.Unknown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThingsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"             >
    <StackPanel>
        <Image x:Name="img" Source="/Assets/question.png" Width="96" Height="96" Margin="3"/>
        <TextBlock Text="{Binding Path=Id}" MaxWidth="90" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="3"/>
    </StackPanel>
</UserControl>
